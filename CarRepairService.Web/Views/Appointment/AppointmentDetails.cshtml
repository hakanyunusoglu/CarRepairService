@using Microsoft.AspNetCore.Http
@model CarRepairService.Web.Models.AppointmentVM

@{
    ViewData["Title"] = "AppointmentDetails";
}
<h3 class="text-center">Randevu Detayları</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <img src="~/img/@Model.Appointment.Car.carImage" alt="Araç Resmi" style="width:150px;height:200px;" />
        </dt>
        <dd class="col-sm-10">

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Car.carBrand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Car.carBrand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Car.modelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Car.modelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Car.lastMaintenanceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Car.lastMaintenanceDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Car.TransmissionType.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Car.TransmissionType.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Car.FuelType.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Car.FuelType.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.EndDate)
        </dd>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Description)
        </dd>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.User.FullName)
        </dd>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Technician)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Technician)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.isActive)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Appointment.isActive == true)
            {
                <span>Evet</span>
            }
            else
            {
                <span>Hayır</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="AppointmentList" class="btn btn-primary">Listeye Dön</a>
</div>
